<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_medium_2"
    android:background="@color/backgroundColor"
    tools:context=".fragments.CompleteSpecialQuestionsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSpecialQAndA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_q_and_a"
            android:nestedScrollingEnabled="false"
            tools:itemCount="1"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMakeAppointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="@string/make_appointment"
            android:paddingVertical="@dimen/margin_medium"
            android:layout_gravity="center"
            style="@style/BlueMaterialButton_round8dp"/>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>